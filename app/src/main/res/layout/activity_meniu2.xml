<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meniu2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/p2"
    tools:context="com.example.corina.deutschlernen.Meniu2">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verbe"
        android:onClick="functieVerb"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Verbe" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subs"
        android:onClick="functieSubs"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Substantive" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adverbe"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Adverbe + Adjective" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prep"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Prepozitii + Conjunctii" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constructii"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Expresii + Constructii" />
</LinearLayout>
