<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meniu_gramatica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/p2"
    tools:context="com.example.corina.deutschlernen.meniuGramatica">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prepozitii"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Präpositionen" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pronume"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Pronumele" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/declAdj"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Declinarea adjectivelor" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pasiv"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"

            android:text="Diateza pasiva" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/conjunctiiVbFinal"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Sätze mit Verb am Ende" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/conjunctiiVbLoc2"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Sätze mit Verb nach erstes Wort" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nachdem"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Nachdem Sätze" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wkk"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Wissen Können Kennen" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativPron"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Relativpronomen" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nDekl"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="n- Deklination" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hinher"
        android:background="@color/colorMov"
        android:textColor="@color/colorM"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:text="Hin, Her, Herein etc" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gradPA"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Die Gradpartikeln" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Fehlere"
            android:background="@color/colorMov"
            android:textColor="@color/colorM"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="Die Fehlere" />
</LinearLayout>
</ScrollView>
